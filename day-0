#设计一个游戏，3>2,2>1,1>3


def game(n,m):
	if n>m:
		s='you,win'
		return s
	if n<m:
		s='you lose'
		return s
	if n==m:
		s='平了'
		return s

i = 1
while i==1:
	print('是否开始游戏\n开始请按1\n取消请按0\n')
	i=int(input())
	if i == 0:
		break
	import random
	random=random.randint(1,3)
	num=int(input('请输入1，2，3\n'))
	if num==1 and random==3:
		num=num+3
	if num==3 and random==1:
		random=random+3
	result=game(num,random)
	random=random-3 if random==4 else random 
	print('计算机输入的是 ')
	print(random,'\n',result) 

